{
  "name": "Udemy Transcript Viewer",
  "description": "View transcript from Udemy videos in a popup window.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "*://*.udemy.com/*"
  ],
  "action": {
    "default_title": "Show Transcript",
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.udemy.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
