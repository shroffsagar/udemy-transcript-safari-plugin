{
  "name": "Udemy Transcript Viewer",
  "description": "View transcript from Udemy videos in a popup window.",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_title": "Show Transcript",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.udemy.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
